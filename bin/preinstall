#!/bin/bash

set -e

. ${INSTALLER_DIR}/wizard

OSFAMILY="$(wiz_fact osfamily)"

install_required_dependencies_for_apache2() {
	local dependencies=""
	case "$OSFAMILY" in
		"debian")
			dependencies="subversion git libapache2-mod-perl2 libapache2-svn"
			for dependency in $dependencies ; do
				wiz_check_package "$dependency" || apt-get install -y "$dependency"
			done

			# Add openproject user to server group
			usermod -a -G ${SERVER_USER} ${APP_USER}
			;;
		"redhat")
			dependencies="mod_dav_svn subversion git mod_perl perl-Digest-SHA perl-libwww-perl"
			for dependency in $dependencies ; do
				wiz_check_package "$dependency" || yum install -y "$dependency"
			done

			wiz_set "repositories/git-http-backend" "/usr/libexec/git-core/git-http-backend"

			# Add openproject user to server group
			usermod -G ${SERVER_USER} ${APP_USER}
			;;
		"suse")
			dependencies="subversion git subversion-server apache2-mod_perl perl-Digest-SHA1 perl-libwww-perl"
			for dependency in $dependencies ; do
				wiz_check_package "$dependency" || zypper install -y "$dependency"
			done

			# Add openproject user to server group
			usermod -A ${SERVER_USER} ${APP_USER}

			;;
	esac
	a2enmod perl
	a2enmod dav
	a2enmod dav_svn
	a2enmod cgi
}

case "$(wiz_get "server/autoinstall")" in
	"skip")
		;;
	"install")
		case "$(wiz_get "server/variant")" in
			"apache2")
				install_required_dependencies_for_apache2
				;;
			*)
				echo "Unsupported server variant."
				;;
		esac
		;;
esac
